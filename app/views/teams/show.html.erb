<div class="container">
  <div class="row">
    <div class="col-md-5">
      <br />
      <h1 class="text-right"><%= @team.name %></h1>
      <h2 class="text-right"><%= @team.tag %></h2>
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-6 well well-lg">
      <br />
      <p class="text-left">
      Leader .................. <%= link_to User.find(@team.user_id).nick, User.find(@team.user_id) %><br />
      Game ................... <%= @team.game_type %><br />
      League and level ... <%= @team.league_level %><br />
      Location ................ <%= @team.location %><br />
      </p>
    </div>
  </div>
</div>
<hr />
<div class="container">
  <div class="row well well-lg">
    <div class="col-md-3">
    </div>
    <div class="col-md-2">
      <p class="text-right">Scout:   <%= @team.scout    %></p>
      <p class="text-right">Demoman: <%= @team.demoman  %></p>
      <p class="text-right">Medic:   <%= @team.medic    %></p>
    </div>
    <div class="col-md-2">
      <p class="text-right">Soldier:   <%= @team.soldier  %></p>
      <p class="text-right">Heavy:     <%= @team.heavy    %></p>
      <p class="text-right">Sniper:    <%= @team.sniper   %></p>
    </div>
    <div class="col-md-2">
      <p class="text-right">Pyro:      <%= @team.pyro     %></p>
      <p class="text-right">Engineer:  <%= @team.engineer %></p>
      <p class="text-right">Spy:       <%= @team.spy      %></p>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>

<hr />
<br />
<div class="container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-2 propic">
      <%= image_tag(@user.avatar_full) %><br />
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-7 well well-lg">
      <h1><%= @user.nick %></h1>
      <h3><%= link_to "Steam profile", @user.steam_url %></h3>
      <% if @user.location %>
        <h3><%= @user.location %></h3>
      <% end %>
    </div>
  </div>
</div>
<hr />
<% if @owner %>
  <div class="container">
    <div class="row">
      <div class="col-md-5 text-right well">
        <h2>your player listings</h2>
        <hr />
        <% if @players and !@players.empty? %>
          <% @players.each do |p| %>
            <h4><%= link_to p.league_level, player_path(p) %></h4>
          <% end %>
        <% else %>
          <% if @teams and @teams.empty? %>
            <h4>You currently have no player listings.</h4>
          <% end %>
        <% end %>
      </div>
      <div class="col-md-2 text-center">
        <br />
        <br />
        <br />
        <%= link_to "edit your profile", edit_user_path(@user), :class => "text-center btn btn-special" %>
      </div>
      <div class="col-md-5 well">
        <h2>your team listings</h2>
        <hr />
        <% if @teams and !@teams.empty? %>
          <% @teams.each do |t| %>
            <%= link_to t.league_level, team_path(t) %>
          <% end %>
        <% else %>
          <% if @teams and @teams.empty? %>
            <h4>You currently have no team listings.</h4>
          <% end %>
        <% end %>
    </div>
  </div>
<% end %>

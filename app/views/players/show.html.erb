<div class="container">
  <div class="row">
    <div class="col-md-5">
      <br />
      <h1 class="text-right">
        <%= link_to User.find(@player.user_id).nick, user_path(User.find(@player.user_id)) %><br />
      </h1>
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-6">
      <div class="well well-lg">
        <br />
        <div class="row">
          <div class="col-md-6 text-left">
            <p>Game</p>
            <p>League and level</p>
            <p>Location</p>
          </div>
          <div class="col-md-6 text-right">
            <p><%= @player.game_type %></p>
            <p><%= @player.league_level %></p>
            <p><%= @player.location %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<hr />
<div class="container">
  <div class="row well well-lg">
    <div class="col-md-4">
      <p class="text-right">Scout:   <%= @player.scout    %></p>
      <p class="text-right">Demoman: <%= @player.demoman  %></p>
      <p class="text-right">Medic:   <%= @player.medic    %></p>
    </div>
    <div class="col-md-4">
      <p class="text-right">Soldier:   <%= @player.soldier  %></p>
      <p class="text-right">Heavy:     <%= @player.heavy    %></p>
      <p class="text-right">Sniper:    <%= @player.sniper   %></p>
    </div>
    <div class="col-md-4">
      <p class="text-right">Pyro:      <%= @player.pyro     %></p>
      <p class="text-right">Engineer:  <%= @player.engineer %></p>
      <p class="text-right">Spy:       <%= @player.spy      %></p>
    </div>
  </div>
</div>
<% if current_user.id == Player.find(params[:id]).user_id %>
  <br />
  <div class="text-center">
    <%= link_to raw('<i class="glyphicon glyphicon-pencil"></i> edit'), edit_player_path(@player), :class => 'btn-lg btn-special' %>
    <%= link_to raw('<i class="glyphicon glyphicon-trash"></i> delete'), player_path(@player), :class => 'btn-lg btn-special', :method => :delete %>
  </div>
  <br />
<% end %>
<hr />
<br />
<h2>Reviews</h2>
<br />
<%= render @reviews %>
<%= form_for(@review) do |form| %>
  <div class="text-center">
    <%# TODO: add char count %>
    <div><%= form.label :body, "Review text (140 characters)" %><br />
      <%= form.text_area :body, cols: 60, rows: 5 %></div>
    <%= form.text_field :player_id, :hidden => true %>
    <br />
    <%= form.submit "post review", :class => "btn-lg btn-special" %>
  </div>
<% end %>

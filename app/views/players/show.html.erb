<br />
<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h1 class="text-right">
        <%= link_to User.find(@player.user_id).nick, user_path(User.find(@player.user_id)) %><br />
      </h1>
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-6">
      <br />
      <p class="text-left">
      Game ................... <%= @player.game_type %><br />
      League and level ... <%= @player.league_level %><br />
      Location ................ <%= @player.location %><br />
      </p>
    </div>
  </div>
</div>
<hr />
<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-2">
      <p class="text-right">Scout:   <%= @player.scout    %></p>
      <p class="text-right">Demoman: <%= @player.demoman  %></p>
      <p class="text-right">Medic:   <%= @player.medic    %></p>
    </div>
    <div class="col-md-2">
      <p class="text-right">Soldier:   <%= @player.soldier  %></p>
      <p class="text-right">Heavy:     <%= @player.heavy    %></p>
      <p class="text-right">Sniper:    <%= @player.sniper   %></p>
    </div>
    <div class="col-md-2">
      <p class="text-right">Pyro:      <%= @player.pyro     %></p>
      <p class="text-right">Engineer:  <%= @player.engineer %></p>
      <p class="text-right">Spy:       <%= @player.spy      %></p>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>
<hr />
<br />
<h2>Reviews</h2>
<br />
<%= render @reviews %>
<%= link_to "write review", new_review_path, :class => "btn btn-special" %>

<div class="navbar navbar-inverse" role="navigation">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "teams.tf", root_path, :class => "navbar-brand" %>
  </div>
  <div class="navbar-collapse collapse navbar-responsive-collapse">
    <ul class="nav navbar-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to raw('<i class="glyphicon glyphicon-home"></i> Home'), root_path %></li>
          <li><%= link_to raw('<i class="glyphicon glyphicon-question-sign"></i> About'), about_path %></li>
          <li><%= link_to raw('<i class="glyphicon glyphicon-envelope"></i> Contact'), contact_path %></li>
        </ul>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-center">
      <li><%= link_to "LFT", lft_path, :class => "btn-lg btn-special add-space" %></li>
      <li><%= link_to "LFP", lfp_path, :class => "btn-lg btn-special add-space" %></li>
      <li></li>
    </ul>
    <% if signed_in? %>
      <ul class="nav navbar-nav navbar-right">
        <%= link_to image_tag(current_user.avatar, :class => 'image-thumbnail signed-in'), user_path(current_user) %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown" id="user-account-settings-dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-cog"></i></a>
          <ul class="dropdown-menu">
            <li><%= link_to raw('<i class="glyphicon glyphicon-user"></i> profile'), user_path(current_user) %></li>
            <li><%= link_to raw('<i class="glyphicon glyphicon-off"></i> sign out'), sign_out_path %></li>
          </ul>
        </li>
      </ul>
    <% else %>
      <ul class="nav navbar-nav navbar-right">
        <%# TODO: delete this when back online %>
        <%= link_to "Login", login_path %>
        <%#= link_to image_tag("http://steamcommunity-a.akamaihd.net/public/images/signinthroughsteam/sits_large_border.png", :class => 'image-thumbnail sign-in'), '/auth/steam' %>
      </ul>
    <% end %>
  </div>
</div>
